#!/usr/bin/bash

NAME="$1"
REMOTE="${NAME}:"
DIR="/media/${NAME}"

/usr/bin/rclone mount "$REMOTE" "$DIR" \
                --fast-list \
                --buffer-size 64M \
                --dir-cache-time 1h \
                --drive-chunk-size 32M \
                --read-only \
                --log-level INFO
