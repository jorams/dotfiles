#!/usr/bin/env bash

case "$1" in
    bv)
        xrandr --output VGA1 --auto
        xrandr --output VGA1 --right-of LVDS1
        bspc monitor VGA1 -d a b c d e f g h i j
        bspc monitor LVDS1 -d 1 2 3 4 5 6 7 8 9 0
        ;;
    bh)
        xrandr --output HDMI1 --auto
        xrandr --output HDMI1 --right-of LVDS1
        bspc monitor LVDS1 -d a b c d e f g h i j
        bspc monitor HDMI1 -d 1 2 3 4 5 6 7 8 9 0
        ;;
    v)
        xrandr --output VGA1 --auto
        xrandr --output VGA1 --right-of LVDS1
        ;;
    vl)
        xrandr --output VGA1 --auto
        xrandr --output VGA1 --left-of LVDS1
        ;;
    hl)
        xrandr --output HDMI1 --auto
        xrandr --output HDMI1 --left-of LVDS1
        ;;
    h|*)
        xrandr --output HDMI1 --auto
        xrandr --output HDMI1 --right-of LVDS1
        ;;
esac

backg
